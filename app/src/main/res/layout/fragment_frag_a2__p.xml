<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="276dp"
    android:background="@color/cool_blue"
    android:layout_gravity="bottom"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"
    tools:context=".fragA2_P">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="204dp"
                    android:layout_weight="1"
                    android:src="@drawable/psicologo" />

                <TextView
                    android:id="@+id/textView_column1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/red"
                    android:text="Daniel Camilo García León" />

                <TextView
                    android:id="@+id/textView_column1.1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Psicólogo"
                    android:textColor="@color/red" />

                <TextView
                    android:id="@+id/emailTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Página web: https://www.psicologodaniel.com"
                    android:textColorLink="@color/blue"
                    android:autoLink="web"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textViewes1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/red" />



            </LinearLayout>

        </ScrollView>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textView6_28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Psicólogo, con una licenciatura en Psicología y un Máster en Psicología Clínica y de la Salud. También tiene certificaciones en Terapia Cognitivo-Conductual y formación en Psicología Positiva. Ha trabajado como psicólogo clínico en un hospital público durante 7 años y en un centro de atención primaria durante 3 años, ofreciendo terapia individual y grupal a pacientes con diversos problemas emocionales y de relación. Actualmente trabaja como psicólogo online, brindando asesoramiento y terapia a través de plataformas digitales."
                android:textColor="@color/black" />

        </ScrollView>

    </LinearLayout>

</FrameLayout>