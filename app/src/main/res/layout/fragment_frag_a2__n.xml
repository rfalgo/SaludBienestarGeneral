<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="276dp"
    android:background="@color/cool_blue"
    android:layout_gravity="bottom"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"
    tools:context=".fragA2_N">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="204dp"
                    android:layout_weight="1"
                    android:src="@drawable/nutricionista" />

                <TextView
                    android:id="@+id/textView_column1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/red"
                    android:text="Ana López Merchán" />

                <TextView
                    android:id="@+id/textView_column1.1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Nutricionista y Dietista"
                    android:textColor="@color/red" />

                <TextView
                    android:id="@+id/emailTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Linkedin: https://www.linkedin.com"
                    android:textColorLink="@color/blue"
                    android:autoLink="web"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textViewes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/red" />

            </LinearLayout>

        </ScrollView>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textView6_28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Nutricionista-dietista con una Licenciatura en Nutrición y Dietética de la Universidad de Granada, un Máster en Nutrición Clínica de la Universidad Complutense de Madrid y certificaciones en Nutrición Deportiva y Nutrición y Salud. Con experiencia laboral de 5 años como nutricionista clínica en un hospital privado y 2 años como nutricionista en un centro de atención primaria, actualmente trabaja como nutricionista online, ofreciendo planes alimentarios personalizados y asesoramiento nutricional a través de plataformas digitales."
                android:textColor="@color/black" />

        </ScrollView>

    </LinearLayout>

</FrameLayout>